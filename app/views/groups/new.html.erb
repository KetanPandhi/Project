<h1>Make new group </h1>
<% if @grps.errors.any? %>
<%= @grps.errors.full_messages %>
<% end %>
<%= form_for @grps do |f| %>
	<%= f.label :name %><br />
	<%= f.text_field :name %><br />
	<%= f.label :description %><br />
	<%= f.text_area :description %><br />
	Private<%= f.radio_button :avail , "1" %><br />
	Public<%= f.radio_button :avail ,  "0" %><br />
	<%= f.label :invitation , "Send invitations" %><br />
	<%= f.text_field :invitation %><br />
	<%= f.submit 'Create group' %>
	<% end %>